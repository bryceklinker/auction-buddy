{
  "name": "auction-buddy",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:bryceklinker/auction-buddy.git",
  "author": "Bryce Klinker <bryce.klinker@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "src/Auction.Buddy.Web"
  ],
  "scripts": {
    "clean:identity": "rimraf ./dist/IdentityServer",
    "prepublish:identity": "yarn clean:identity",
    "publish:identity": "cd ./tests/Auction.Buddy.Fake.IdentityServer && dotnet publish --configuration Release --output ../../dist/IdentityServer",
    "prestart:identity": "yarn publish:identity",
    "start:identity": "cd ./dist/IdentityServer && cross-env ASPNETCORE_URLS=\"https://localhost:5002\" dotnet Auction.Buddy.Fake.IdentityServer.dll || true",
    "wait:identity": "wait-on tcp:5002",
    "kill:identity": "kill -9 $(lsof -t -i:5002 -sTCP:LISTEN) || true",
    "clean:web": "rimraf ./dist/AuctionBuddy",
    "prepublish:web": "yarn clean:web",
    "publish:web": "cd ./src/Auction.Buddy.Web && dotnet publish --configuration Release --output ../../dist/AuctionBuddy",
    "prestart:web": "yarn publish:web",
    "start:web": "cd ./dist/AuctionBuddy && cross-env ASPNETCORE_ENVIRONMENT=Acceptance ASPNETCORE_URLS=\"https://localhost:5001\" dotnet Auction.Buddy.Web.dll || true",
    "wait:web": "wait-on tcp:5001",
    "kill:web": "kill -9 $(lsof -t -i:5001 -sTCP:LISTEN) || true",
    "clean": "yarn clean:identity && yarn clean:web",
    "wait_for_services": "concurrently \"yarn wait:web\" \"yarn wait:identity\"",
    "acceptance_tests": "cd ./tests/Auction.Buddy.Acceptance.Tests && dotnet test",
    "kill_services": "concurrently \"yarn kill:web\" \"yarn kill:identity\"",
    "run:web": "cd ./src/Auction.Buddy.Web && dotnet run",
    "test:acceptance": "concurrently \"yarn start:identity\" \"yarn start:web\" \"yarn wait_for_services && yarn acceptance_tests && yarn kill_services || (yarn kill_services && false)\"",
    "test:dotnet:unit": "cd ./tests/Auction.Buddy.Unit.Tests && dotnet test",
    "test:js:unit": "cd ./src/Auction.Buddy.Web && yarn test",
    "test:unit": "yarn test:dotnet:unit && yarn test:js:unit",
    "lint": "cd ./src/Auction.Buddy.Web && yarn lint",
    "ci": "yarn lint && yarn test:unit && yarn test:acceptance"
  },
  "devDependencies": {
    "concurrently": "4.1.1",
    "cross-env": "5.2.0",
    "rimraf": "2.6.3",
    "wait-on": "3.2.0"
  }
}
